{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2015"],
    "downlevelIteration": true,
    "declaration": true,
    "sourceMap": true
  },
  "exclude": ["**/*.test.ts", "dist/**/*", "node_modules/**/*"]
}
